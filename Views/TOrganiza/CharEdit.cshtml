                retur[1]="";            //Edit not enabled
                retur[2]="";            //Create not enabled
                retur[3]="CharEdit";     //delete is remove
                break;
        default:
            break;
        }
        return retur;
    }
    List<string> Columns(string table,int type){
        List<string> retur = new List<string>();
        switch (table)
        {
            case "UserChar":
                if (type==0)
                {
                    retur.Add("UserChar");
                    retur.Add(@SharedLocalizer.GetLocalizedHtmlString("Id"));
                    retur.Add(@SharedLocalizer.GetLocalizedHtmlString("Name"));
                }
                else{
                    retur.Add("RcharId");
                    retur.Add("RcharRolId");
                    retur.Add("RcharPerName");
                }
                break;
            default:
                break;
        }
        return retur;
    }
