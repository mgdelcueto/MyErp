@functions {
    string panelBold(int panel)
    {      
        int tpan=0;  
        try{    
        tpan = (int)ViewData["panel"];
        }
        catch{}
        string cstyle ="";
        if (panel==tpan)
        {cstyle="font-weight:bold";}
        return cstyle;
    }
    string panelSel(int panel)
    {      
        int tpan=0;  
        try{    
        tpan = (int)ViewData["panel"];
        }
        catch{}
        string csel ="false";
        if (panel==tpan)
        {csel="true";}
        return csel;
    }
    string navClass(int panel)
    {
        int tpan=0;
        try{
            tpan=(int)ViewData["panel"];
        }
        catch{}
        string navcl="nav-link";
        if (panel==tpan)
        {navcl="nav-link active"; }
        return navcl;
        
    }
    string isVisible(int panel){
        string retcol="";
        int opanel =0;
        try{
        opanel = (int)ViewData["panel"];
        }
        catch{}
        if (opanel==panel){retcol="visible";}
        else{retcol="invisible";}
        return retcol;
    }
    int thisPanel(){
        int opanel =0;
        try{
         opanel = (int)ViewData["panel"];
        }
        catch{}
         return opanel;
    }
    int ModelPerId()
    {
        int pid =0;
        try{
        pid= (int)ViewData["PerId"];//0;//@Model.PerId;
        }
        catch{}
        return pid;
    }

    string dName()
    {
        string dname= (string)ViewData["dName"];//0;//@Model.PerId;
        return dname;
    }

}
