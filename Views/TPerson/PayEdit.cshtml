        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PayStDate)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.PayType,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PayType, new { htmlAttributes = new { @class = "norm-text", @style = "width:175px"} })</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PayType)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.PayRet,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PayRet, new { htmlAttributes = new { @class = "norm-text", @style = "width:175px"} })</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PayRet)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.PayAccount,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PayAccount, new { htmlAttributes = new { @class = "norm-text", @style = "width:225px"} })</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PayAccount)</td>
        </tr>
        <tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Update"  name="actionType"/></td>
            <td><input type="submit" value="Cancel" name="actionType"/></td>

        </tr>
    </table>
    </div>
