@using MyErp.Models
@model TPPay
<div class="visicont-titlesble">
<h1>Edit a Pay record</h1>
</div>
@using (Html.BeginForm()) {
    <div class="visible">
    @Html.HiddenFor(p => p.PayId)
    @Html.HiddenFor(p => p.PayPerId)
    @Html.ValidationSummary(true)
    <table class="table-norm" border="1">
        <tr>
            <td>Nombre :</td>
