                    retur.Add(@SharedLocalizer.GetLocalizedHtmlString("Descr"));
                    retur.Add(@SharedLocalizer.GetLocalizedHtmlString("Costh"));
                    retur.Add(@SharedLocalizer.GetLocalizedHtmlString("Curcy"));
                }
                else{
                    retur.Add("OpeId");
                    retur.Add("OpeCode");
                    retur.Add("OpeDesc");
                    retur.Add("OpeCosth");
                    retur.Add("OpeCurcy");
