@model List<TCTruck>
    <table class="table-norm" border="1">
    <div class="cont-titles">
    <h2>>Trucks Data</h2>
    </div>
    <tr>
        <th class="head-text">Code</th> 
        <th class="head-text">Description</th>                
    </tr>
   
    @foreach (var c in Model) {
        <tr>
            <td class ="col-text">@c.TruckCode</td>            
            <td class ="big-text">@c.TruckDeno</td>
            <td class="col-text">@Html.ActionLink("Delete", "TrDelete", new { id = c.TruckId}, new { onclick="return confirm('Are you sure?');"})</td>
            <td class="col-text">@Html.ActionLink("Edit", "TrEdit", new { id = c.TruckId ,panel=7,vpanel=1})</td>
            
        </tr>
    }
    </table>
    @Html.ActionLink("Add a New Item", "TrCreate")

