@using MyErp.Models
@model TSPlanning
@using MyErp.Resources
@inject LocService SharedLocalizer

@functions {
    int SupId(){
        return ((TSuplier)ViewBag.Suplier).SupId;
    }
}
<div class="cont-titles">
<h2>@SharedLocalizer.GetLocalizedHtmlString("AddPlanningRecord")</h2>
</div>
@using (Html.BeginForm()) {
    <div class="visible">
    @Html.ValidationSummary(true)
    <table class="table-norm" border="1">
        <hr style="width:100%;text-align:left;margin-left:0">
        <tr>
            <input type="hidden" name="PlanSupId" value="@(((TSuplier)ViewBag.Suplier).SupId)"/>
            <td>@SharedLocalizer.GetLocalizedHtmlString("Suplier") :</td>
            <td>@(((TSuplier)ViewBag.Suplier).SupRasoc)</td>
            <td>@SharedLocalizer.GetLocalizedHtmlString("SupNIF")</td>
            <td>@(((TSuplier)ViewBag.Suplier).SupNif)</td>
        </tr>
    </table>
    <table class="table-norm" border="1">
        <hr style="width:100%;text-align:left;margin-left:0">
        <tr>
            <td>@Html.LabelFor(p => p.PlanProdId,new { @class = "norm-text",})</td>
            <td>
                @Html.DropDownListFor(p=> p.PlanProdId,ViewBag.ddlReferVB as SelectList ,null,new { @class = "norm-text" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PlanProdId)</td>
        </tr>
        <table class="table-norm" border="1">
        <hr style="width:100%;text-align:left;margin-left:0">
        <tr>
            <td>@Html.LabelFor(p => p.PlanDateFrom,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PlanDateFrom, new { htmlAttributes = new { @class = "norm-num"} })</td>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PlanDateFrom)</td>
        </tr>
        </tr>        
        <tr>
            <td>@Html.LabelFor(p => p.PlanDateTo,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PlanDateTo, new { htmlAttributes = new { @class = "norm-num" } })</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PlanDateTo)</td>
        </tr>        
        <tr>
            <td>@Html.LabelFor(p => p.PlanQty,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PlanQty, new { htmlAttributes = new { @class = "norm-num", @style = "width:170px" } })</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PlanQty)</td>
        </tr>        
        <tr>
            <td>@Html.LabelFor(p => p.PlanFirmSt,new { @class = "norm-text",})</td>
            <td>@Html.EditorFor(p => p.PlanFirmSt, new { htmlAttributes = new { @class = "norm-num", @style = "width:120px" } })</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ValidationMessageFor(p => p.PlanFirmSt)</td>
        </tr>        
        </table>
        <tr>
            <td></td>
            <td><input type="submit" value="Add"  name="actionType"/></td>
            <td><input type="submit" value="Cancel" name="actionType"/></td>

        </tr>
    </table>
    </div>
}