@using MyErp.Models
@using System.Linq
@*@model TCustomer*@
@using MyErp.Resources
@inject LocService SharedLocalizer
@{
    Layout = null;  
    Layout="~/Views/Shared/_Layout.cshtml";
}
@functions {

    string navClass(int panel)
    {
        int tpan=0;
        try{
            tpan=(int)ViewData["panel"];
        }
        catch{}
        string navcl="nav-link";
        if (panel==tpan)
        {navcl="nav-link active"; }
        return navcl;
        
    }

        string panelBold(int panel)
    {            
        int tpan = (int)ViewData["panel"];
        string cstyle ="";
        if (panel==tpan)
        {cstyle="font-weight:bold";}
        return cstyle;
    }

    string isVisible(int panel){
        string retcol="";
        int opanel = (int)ViewData["panel"];
        if (opanel==panel){retcol="visible";}
        else{retcol="invisible";}
        return retcol;
    }
    int thisPanel(){
         int opanel = (int)ViewData["panel"];
         return opanel;
    }
    int ModelCusId()
    {
        int pid =0;
        try{
        pid= (int)ViewData["CusId"];//0;//@Model.PerId;
        }
        catch{}
        return pid;
    }

    string cName()
    {
        string dname= (string)ViewData["cName"];//0;//@Model.PerId;
        return dname;
    }

}


